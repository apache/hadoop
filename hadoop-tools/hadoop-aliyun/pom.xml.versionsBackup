  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apache.hadoop</groupId>
    <artifactId>hadoop-project</artifactId>
    <version>3.1.3-SNAPSHOT</version>
    <relativePath>../../hadoop-project</relativePath>
  </parent>
