                    <filter>
                      <artifact>dnsjava:dnsjava</artifact>
                      <excludes>
                        <excldue>dig*</excldue>
                        <exclude>jnamed*</exclude>
                        <exlcude>lookup*</exlcude>
                        <exclude>update*</exclude>
                      </excludes>
                    </filter>

