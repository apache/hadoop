   | <LCOMP: ">">
   | <RCOMP: "<">
   | <NOT: "not">
   | <IN: "in">
   | <NOTEQUAL: "!=">
   | <ASTERISK: "*">
   | <MAX_VERSIONS: "max_versions">
   | <MAX_LENGTH: "max_length">
   | <COMPRESSION: "compression">
   | <NONE: "none">
   | <BLOCK: "block">
   | <RECORD: "record">
